<%- model_class = Capsule -%>
<div class="page-header">
  <h1><%= @capsule.title %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:message) %>:</strong></dt>
  <dd><%= @capsule.message %></dd>
  <dt><strong>Send Date:</strong></dt>
  <dd><%= @capsule.sendDate %></dd>
  <dt><strong>Interval:</strong></dt>
  <% if @capsule.monthlyInterval %>
    <dd>Monthly</dd>
  <% else %>
    <dd>Yearly</dd>
  <% end %>
  <dt><strong>Event Date:</strong></dt>
  <dd><%= @capsule.eventDate %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              capsules_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_capsule_path(@capsule), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              capsule_path(@capsule),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
